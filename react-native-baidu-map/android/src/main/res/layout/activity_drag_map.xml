<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ll_top_items"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:background="#2fbdc8"
                android:orientation="horizontal">
                <ImageView
                    android:clickable="true"
                    android:id="@+id/iv_back"
                    android:layout_gravity="center|left"
                    android:layout_width="16dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="10dp"
                    android:background="@mipmap/famhui"/>
                <com.imall.react_native_baidumap.Utils.ClearEditText
                    android:id="@+id/et_searchInput"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="16dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:paddingLeft="10dp"
                    android:paddingRight="6dp"
                    android:textSize="12sp"
                    android:hint="输入地址关键字"
                    android:layout_height="31dp" />
                <TextView
                    android:id="@+id/tv_search"
                    android:clickable="true"
                    android:layout_gravity="center|left"
                    android:layout_width="45dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_height="31dp"
                    android:gravity="center"
                    android:text="搜索"
                    android:textColor="#fff"
                    android:background="@drawable/textshape"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <com.baidu.mapapi.map.MapView
                    android:id="@+id/dragmap"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true" />
                <ImageView
                    android:id="@+id/iv_location"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="8dp"
                    android:clickable="true"
                    android:layout_marginBottom="36dp"
                    android:background="@mipmap/xinxi"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"/>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="16dp"
                    android:background="@mipmap/weizhi"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ListView
                android:id="@+id/lv_drag_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ListView>
        </LinearLayout>
    </LinearLayout>
    <ListView
        android:visibility="invisible"
        android:layout_marginTop="59dp"
        android:background="#fff"
        android:id="@+id/lv_addressList"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>
</RelativeLayout>
