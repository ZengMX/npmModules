<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:descendantFocusability= "blocksDescendants"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_text"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:background="@drawable/listview_select"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tv_routeName"
                android:drawablePadding="15dp"
                android:drawableLeft="@mipmap/shuxian_6x30x"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="494路"
                android:textColor="#000"
                android:textSize="16sp"
                android:layout_height="0dp"/>
            <TextView
                android:id="@+id/tv_routeMsg"
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:layout_weight="1"
                android:textColor="#666666"
                android:text="1小时3分钟 | 8.0公里 | 步行1111米"
                android:layout_height="0dp"/>
        </LinearLayout>
        <ImageView
            android:layout_marginRight="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:src="@mipmap/youjiantoux"
            />
    </LinearLayout>
    <LinearLayout
        android:background="#f9f9f9"
        android:id="@+id/ll_nav"
        android:layout_below="@+id/ll_text"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:gravity="center">
        <Button
            android:focusable = "false"
            android:id="@+id/bt_nav"
            android:layout_width="160dp"
            android:layout_height="35dp"
            android:background="@drawable/buttonshape"
            android:text="使用本机地图导航"
            android:textColor="#2fbdc8"
            android:textSize="14sp"/>
    </LinearLayout>
</RelativeLayout>