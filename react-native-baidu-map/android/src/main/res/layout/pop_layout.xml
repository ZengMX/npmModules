<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@mipmap/popup_bg">
    <LinearLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:gravity="center">
      <LinearLayout
          android:layout_weight="1"
          android:id="@+id/user_info"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:padding="5dp"
          android:gravity="center"
          android:layout_gravity="center"
          android:orientation="vertical" >
          <TextView
              android:id="@+id/tv_title_names"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:ellipsize="end"
              android:textColor="#000"
              android:singleLine="true"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:text="标题"
              android:textSize="12sp" />

          <TextView
              android:id="@+id/tv_title_address"
              android:text="地址adsfsdafasdfasdfsdafasdfsdafdasdfsfrewfdewdfwaesfaesfsadfdsfsfsdaf"
              android:textSize="10sp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:singleLine="true"/>
      </LinearLayout>
    <Button
        android:background="@drawable/buttonselectstore"
        android:clickable="true"
        android:id="@+id/bt_store"
        android:text="门店详情"
        android:textColor="#f00"
        android:textSize="9sp"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginRight="5dp"
        />
    </LinearLayout>
</LinearLayout>