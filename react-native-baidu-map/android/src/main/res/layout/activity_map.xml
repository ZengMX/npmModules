<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.baidu.mapapi.map.MapView
        android:id="@+id/map"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true" />

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/ll_map_back"
        android:clickable="true"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/layerlist"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/fanhuix"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_map_visible"
        android:visibility="visible"
        android:layout_marginLeft="10dp"
        android:layout_width="38dp"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_above="@+id/ll_maplook_visible"
        android:background="@drawable/layerlist"
        android:layout_marginBottom="89dp">
        <LinearLayout
            android:id="@+id/ll_amp"
            android:layout_gravity="center"
            android:clickable="true"
            android:background="@drawable/buttonselect"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">
            <View
                android:clickable="false"
                android:gravity="center"
                android:id="@+id/pre"
                android:layout_width="13dp"
                android:background="@mipmap/jiahaox"
                android:layout_height="13dp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="1dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:background="@mipmap/hengxianx"></View>
        <LinearLayout
            android:id="@+id/ll_nar"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/buttonselect"
            android:layout_weight="1">
            <View
                android:clickable="false"
                android:gravity="center"
                android:id="@+id/next"
                android:layout_width="13dp"
                android:background="@mipmap/jianhaox"
                android:layout_height="2dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignWithParentIfMissing="false"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:orientation="vertical"
        android:background="#fff"
        android:id="@+id/ll_maplook_visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="13dp"
            android:paddingLeft="12dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="#000"
                android:text="北京同仁堂(车陂店)"
                android:layout_marginBottom="5dp"
                android:singleLine="true"
                android:textSize="16sp"
                android:layout_weight="1"
                android:id="@+id/tv_storeNames" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="12sp"
                android:singleLine="true"
                android:text="北京同仁堂(车陂店)"
                android:layout_weight="1"
                android:id="@+id/tv_storyAddress" />
        </LinearLayout>
        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@mipmap/hengxianx"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_lookroute"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/buttonselect"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@mipmap/chakanxianlu"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="查看路线"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_usemap"
                android:clickable="true"
                android:background="@drawable/buttonselect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@mipmap/ditu"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="本机地图"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_details"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="#fff"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:clickable="true"
            android:id="@+id/ll_xiashang"
            android:layout_width="match_parent"
            android:background="@drawable/listview_select"
            android:layout_height="30dp"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_xiangxiajiantoux"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/xiangxiajiantoux"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_route_allmsg"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_home_routeName"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="40路"
                android:textSize="15sp"
                android:textColor="#000"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_home_routeDetail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="1小时3分钟 | 8.0公里 | 步行1111米"
                android:textColor="#666666"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"/>
            <View android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@mipmap/hengxianx"></View>
        </LinearLayout>
        <ListView
            android:listSelector="@android:color/transparent"
            android:divider="@null"
            android:scrollbars="none"
            android:id="@+id/lv_home_route_details"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </ListView>
    </LinearLayout>
</RelativeLayout>

